<?xml version="1.0" encoding="utf-8"?>
<odoo>

	 <!-- add  Secondary UOM,Secondary Qty fields in bom-->
	<record id="mrp_bom_sec_uom_form_view" model="ir.ui.view">
		<field name="name">mrp.bom.form</field>
		<field name="model">mrp.bom</field>
		<field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook/page/field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="after">
				<field name="secondary_quantity" groups="secondary_uom_mrp_app.group_secondary_uom"/>
				<field name="secondary_uom_id" groups="ssecondary_uom_mrp_app.group_secondary_uom"/>
			</xpath>
		</field>
	</record>


 <!-- add Secondary UOM,Secondary Qty,Secondary Reserved Qty and Secondary Consumed Qty fields in mrp production line-->

	<record id="view_stock_move_raw_tree" model="ir.ui.view">
		<field name="name">stock.move.raw.tree</field>
		<field name="model">stock.move</field>
		<field name="inherit_id" ref="mrp.view_stock_move_raw_tree"/>
		<field name="arch" type="xml">
			<xpath expr="//tree/field[@name='product_uom_qty']" position="after">
				<field name="secondary_quantity" groups="secondary_uom_mrp_app.group_secondary_uom"/>
				<field name="secondary_uom_id" groups="secondary_uom_mrp_app.group_secondary_uom"/>
			</xpath>

			<xpath expr="//tree/field[@name='reserved_availability']" position="after">	
				<field name="secondary_quantity_reserved" groups="secondary_uom_mrp_app.group_secondary_uom" attrs="{'column_invisible': [('parent.state', '=', 'draft')]}" readonly="1"/>
			</xpath>

			<xpath expr="//tree/field[@name='quantity_done']" position="after">	
				<field name="secondary_quantity_done" groups="secondary_uom_mrp_app.group_secondary_uom" attrs="{'column_invisible': [('parent.state', '=', 'draft')]}" readonly="1"/>
			</xpath>

		</field>
	</record>


	<record id="mrp_mrp_product_produceform_view" model="ir.ui.view">
		<field name="name">mrp.product.produce</field>
		<field name="model">mrp.product.produce</field>
		<field name="inherit_id" ref="mrp.view_mrp_product_produce_wizard"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='raw_workorder_line_ids']/tree/field[@name='qty_to_consume']" position="after">
				<field name="secondary_quantity" groups="secondary_uom_mrp_app.group_secondary_uom"/>
				<field name="secondary_uom_id" groups="secondary_uom_mrp_app.group_secondary_uom"/>
			</xpath>

			<xpath expr="//field[@name='raw_workorder_line_ids']/tree/field[@name='qty_reserved']" position="after">	
				<field name="secondary_quantity_reserved" groups="secondary_uom_mrp_app.group_secondary_uom"/>
			</xpath>

			<xpath expr="//field[@name='raw_workorder_line_ids']/tree/field[@name='qty_done']" position="after">	
				<field name="secondary_quantity_done" groups="secondary_uom_mrp_app.group_secondary_uom"/>
			</xpath>
		</field>
	</record>

